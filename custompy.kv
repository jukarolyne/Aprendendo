<Gerenciador>:
    Menu:
        name: 'menu'
    Tarefas:
        name: 'tarefas'

<Menu>:
    BoxLayout:
        orientation: 'vertical'
        padding:200
        spacing: 5
        canvas:
            Color:
                rgba: [0.6,0.2,0.4,1]
            Rectangle:
                size: self.size
                pos: self.pos

        Image:
            source: 'logo_sigma.jpg'
            size_hint_y: None
            height: 100
            allow_stretch: True
        Botao: 
            text: 'Tarefas'
            on_release: app.root.current = 'tarefas'
        Botao: 
            text: 'Assistente'
        Botao:
            text: 'Sair'
            on_release: app.stop()

<Tarefas>:
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'tarefas'
                    on_release: app.root.current = 'menu'
                ActionButton:
                    text: 'Sair'
                    on_release: app.stop()


        ScrollView:
            BoxLayout:
                id: box
                orientation:'vertical'
                size_hint_y: None
                height: self.minimum_height
        BoxLayout:
            size_hint_y: None
            height: 60
            TextInput:
                id: texto
            Button:
                canvas: 
                    Color:
                        rgba: [1, 0.4, 0, 1]
                text: '+'
                size_hint_x: None
                width: 60
                on_release: root.addWidget()

<Tarefa>:
    size_hint_y:None
    height: 100
    Label:
        id: label
        font_size: 30
    Button: 
        text: 'X'
        size_hint_y: None
        width: 60
        on_release: app.root.get_screen('tarefas').ids.box.remove_widget(root)