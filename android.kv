<Gerenciador>:
    Menu:
        name: 'menu'
    Tarefas:
        name: 'tarefas'

<Menu>:
    BoxLayout:
        orientation: 'vertical'
        padding:200
        spacing: 5
        Image:
            source: 'logo_sigma.jpg'
            size_hint_y: None
            height: 100
            allow_stretch: True
        Button: 
            text: 'Tarefas'
            on_release: app.root.current = 'tarefas'
        Button: 
            text: 'Assistente'
        Button:
            text: 'Sair'
            on_release: app.stop()

<Tarefas>:
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            #lugar onde colocar widgets específicos do actionBar
            ActionView:
                #para voltar
                ActionPrevious:
                    #icone pode ser adicionado tbm

                    #texto que identifica a parte do app que tá
                    title: 'tarefas'
                    on_release: app.root.current = 'menu'

                #não pode colocar button porque está dentro do actionview só pode ter action itens
                ActionButton:
                    text: 'Sair'
                    on_release: app.stop()


        ScrollView:
            BoxLayout:
                id: box
                orientation:'vertical'
                size_hint_y: None
                height: self.minimum_height
        BoxLayout:
            size_hint_y: None
            height: 60
            TextInput:
                id: texto
            Button:
                text: '+'
                size_hint_x: None
                width: 60
                on_release: root.addWidget()

<Tarefa>:
    size_hint_y:None
    height: 100
    Label:
        id: label
        font_size: 30
    Button: 
        text: 'X'
        size_hint_y: None
        width: 60
        #get_screen -> pega uma tela agora, não um BoxLayout. Depois é que se acessa BoxLayout
        on_release: app.root.get_screen('tarefas').ids.box.remove_widget(root)